<%= search_form_for @q do |f| %>
  <div class="form">
    <div class="column">
      <h4><%= t ".departure?_html" %></h4>
      <div class="f-item">
        <%= f.label :departure_cont %>
        <%= f.search_field :departure_cont %>
      </div>
    </div>
    <div class="column">
      <h4><%= t ".arrival?_html" %></h4>
      <div class="f-item">
        <%= f.label :arrival_cont %>
        <%= f.search_field :arrival_cont %>
      </div>
    </div>
    <div class="column">
      <h4><%= t ".name?_html" %></h4>
      <div class="f-item">
        <%= f.label :name_cont %>
        <%= f.search_field :name_cont %>
      </div>
    </div>

    <%= f.submit t(".search"), class: "search-submit" %>
  </div>
<% end %>
