<h1><%= t ".title" %></h1>
<div class="row">
  <div class="pt-2 col-sm-12 col-md-3">
    <div class="profile-sidebar">
      <div class="profile-user-avatar">
        <%= image_tag current_user.avatar.url :thumb %>
      </div>
      <div class="profile-username">
        <%= full_name current_user %>
      </div>
      <ul class="nav profile-menu">
        <li class="profile-menu-item active">
          <%= fa_icon "pencil-square-o", text: t(".account_informations") %>
        </li>
      </ul>
    </div>
  </div>
  <div class="pt-2 col-12 col-md-9 ml-md-auto">
    <div class="profile-content">
      <h2 class="mx-auto pt-4"><%= t ".account_informations" %></h2>
      <div class="row justify-content-center">
        <div class="col-10 col-md-7">
          <%= form_for @user, html: {multipart: true} do |f| %>
            <%= render "shared/error_messages", object: f.object %>

            <%= image_tag current_user.avatar.url(:medium), class: "img-fluid" %>

            <div class="form-group">
              <%= f.label :avatar %>
              <%= f.file_field :avatar, class: "form-control-file" %>
            </div>

            <div class="form-group">
              <%= f.label :username %>
              <%= f.text_field :username, class: "form-control", disabled: true %>
            </div>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control", disabled: true %>
            </div>

            <div class="form-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>

            <%= f.submit t(".save_changes"), class: "btn btn-primary w-100" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
