<%= form_for @user, url: form_url, html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= image_tag current_user.avatar.url(:medium), class: "img-fluid" %>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control-file" %>
  </div>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <%= f.submit t(".save_changes"), class: "btn btn-primary w-100" %>
<% end %>
