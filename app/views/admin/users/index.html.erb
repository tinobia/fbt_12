<% provide :title, t(".title") %>
<div class="row m-2 pt-4">
  <div class="col">
    <table class="table table-hover table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col"><%= User.human_attribute_name :id %></th>
          <th scope="col" class="w-25"><%= User.human_attribute_name :username %></th>
          <th scope="col" class="w-25"><%= User.human_attribute_name :email %></th>
          <th scope="col" class="w-25"><%= User.human_attribute_name :is_admin? %></th>
          <th scope="col"><%= t "shared.actions" %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row">
              <%= user.id %>
            </th>
            <td>
              <%= link_to user.username, admin_user_path(user) %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_admin? %>
                <%= fa_icon "check-circle-o 2x", class: "text-success" %>
              <% else %>
                <%= fa_icon "times-circle-o 2x", class: "text-danger" %>
              <% end %>
            </td>
            <td>
              <%= link_to t("admin.users.edit.title"), edit_admin_user_path(user),
                class: "btn btn-dark align-self-center" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @users %>
    </div>
  </div>
</div>
