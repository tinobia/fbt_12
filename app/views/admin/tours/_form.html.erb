<%= form_for @tour, url: form_url do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :departure %>
    <%= f.text_field :departure, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :arrival %>
    <%= f.text_field :arrival, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :itinerary %>
    <%= f.text_field :itinerary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :overview %>
    <%= f.text_field :overview, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit submit_text, class: "btn btn-primary w-100" %>
  </div>
<% end %>
