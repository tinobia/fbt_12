<% provide :title, @category.name %>
<% content_for :action do %>
  <%= link_to t("admin.categories.edit.title"), edit_admin_category_path(@category),
    class: "btn btn-dark align-self-center" %>
  <%= link_to t("admin.categories.delete.action"), admin_category_path(@category),
    method: :delete, data: {confirm: t("admin.categories.delete.confirmation")},
    class: "btn btn-danger align-self-center" %>
<% end %>
<div class="row">
  <div class="col-12 col-md-3 bg-light m-2 pt-4">
    <h2 class="text-center"><%= t "admin.categories.show.category_informations" %></h2>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th scope="row"><%= Category.human_attribute_name :id %></th>
          <td><%= @category.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Category.human_attribute_name :name %></th>
          <td><%= @category.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Category.human_attribute_name :parent %></th>
          <td><%= @category.parent&.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-12 col-md-8 bg-light mt-2 pt-4">
    <h2 class="text-center"><%= t "admin.tours.index.title" %></h2>
    <%= render "admin/tours/tour_list", tours: @tours %>
  </div>
</div>
