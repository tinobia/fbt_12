<%= form_for @request, url: form_url do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="row">
    <div class="col">
      <div class="form-group">
        <%= f.label :user %>
        <%= f.select :user_id, @users.map{|u| [u.username, u.id]},
          {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :trip %>
        <%= f.select :trip_id, @trips.map{|t| [t.name, t.id]},
          {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :number_of_people %>
        <%= f.number_field :number_of_people, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit submit_text, class: "btn btn-primary w-100" %>
      </div>
    </div>
  </div>
<% end %>
